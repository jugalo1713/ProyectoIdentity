@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Forgot your password</h3>
        <form asp-controller="Accounts" asp-action="ForgotPassword" method="POST">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="row mt-4">
                <div class="col-sm-6 offset-3">
                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success w-75 btn-lg">Access&nbsp;<i class="bi bi-arrow-right-circle-fill "></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}